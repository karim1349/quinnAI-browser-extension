{
    "manifest_version": 3,
    "name": "QuinnAI Browser Extension",
    "short_name": "quinnai",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [{
        "resources": [
            "dist/gmailJsLoader.js",
            "dist/extension.js",
            "dist/gmailJsLoader.js.map",
            "dist/extension.js.map",
            "react.js",
            "react-dom.js"
        ],
        "matches": ["<all_urls>"]
    }],
    "host_permissions": [
        "https://*/*"
    ]
}
